<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ScrollView
            android:fillViewport="true"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="13">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:text="회원 정보 조회"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:padding="10dp"/>
                <View
                    android:background="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_margin="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="30dp"
                        android:gravity="center_vertical"
                        android:text="아이디"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="user1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:background="@drawable/right_border"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:textSize="17dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:text="비밀번호"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="**********"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:background="@drawable/right_border"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:textSize="17dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:gravity="center_vertical"
                        android:text="닉네임"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/edtNickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/right_border"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:text="Jessy001"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="170dp"
                        android:gravity="center_vertical"
                        android:text="키"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="30dp"
                        android:gravity="center_vertical"
                        android:text="체중"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <LinearLayout
                        android:background="@drawable/right_border"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:layout_marginRight="40dp">
                        <TextView
                            android:id="@+id/edtHeight"
                            android:background="@android:color/transparent"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:inputType="number"
                            android:text="160"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="15dp"
                            android:maxLength="3"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="cm"/>

                    </LinearLayout>
                    <LinearLayout
                        android:background="@drawable/right_border"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/edtWeight"
                            android:background="@android:color/transparent"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:text="60"
                            android:inputType="number"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="15dp"
                            android:maxLength="3"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kg"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="150dp"
                        android:gravity="center_vertical"
                        android:text="성별"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="30dp"
                        android:gravity="center_vertical"
                        android:text="출생년도"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <RadioGroup
                        android:id="@+id/rgGender"
                        android:background="@drawable/right_border"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="90dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/rbMale"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/radiogroup_left"
                            android:textColor="@drawable/custom_radiogroup_text"
                            android:text="남"
                            android:textSize="15dp"
                            android:gravity="center"
                            />
                        <TextView
                            android:id="@+id/rbFemale"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/radiogroup_right"
                            android:backgroundTint="#E18610"
                            android:textColor="@drawable/custom_radiogroup_text"
                            android:text="여"
                            android:textSize="15dp"
                            android:gravity="center"
                            />
                    </RadioGroup>
                    <LinearLayout
                        android:background="@drawable/right_border"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:backgroundTint="#E18610"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="2002"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/white" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="110dp"
                        android:gravity="center_vertical"
                        android:text="활동정도"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="30dp"
                        android:gravity="center_vertical"
                        android:text="다이어트 목표"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <RadioGroup
                        android:id="@+id/rgActiveLevel"
                        android:background="@drawable/right_border"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="40dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/rbHigh"
                            android:background="@drawable/radiogroup_left"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:textColor="@drawable/custom_radiogroup_text"
                            android:text="상"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/rbMid"
                            android:background="@drawable/radiogroup_center"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:textColor="@drawable/custom_radiogroup_text"
                            android:text="중"
                            android:backgroundTint="#E18610"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/rbLow"
                            android:background="@drawable/radiogroup_right"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:textColor="@drawable/custom_radiogroup_text"
                            android:text="하"
                            android:gravity="center"/>
                    </RadioGroup>
                    <Button
                        android:id="@+id/btnDietPlan"
                        android:background="@drawable/custom_button"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:text="빠른 체중 감소"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"/>
                </LinearLayout>

            

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:gravity="center">
                <Button
                    android:id="@+id/btnInfoModifiy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_border"
                    android:text="정보 수정"
                    android:textStyle="bold"
                    android:scaleType="centerInside"
                    android:textColor="#E18610"
                    android:layout_marginRight="10dp" />

                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_border"
                    android:text="로그아웃"
                    android:textStyle="bold"
                    android:scaleType="centerInside"
                    android:textColor="#E18610"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <Button
                    android:id="@+id/btnDeleteUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:background="@drawable/round_border"
                    android:scaleType="centerInside"
                    android:textColor="#E18610"
                    android:text="회원 탈퇴"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>



            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>