<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SignUpActivity">
    <ScrollView
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="12">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="회원가입"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2">
                <View
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="2px"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30dp"
                    android:gravity="center_vertical"
                    android:text="아이디"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/edtId"
                    android:layout_width="195dp"
                    android:layout_height="50dp"
                    android:background="@drawable/right_border"
                    android:gravity="center"
                    android:hint="아이디로 사용할\n 이메일를 입력해주세요."
                    android:textSize="15dp" />
                <ImageButton
                    android:id="@+id/btnIdCheck"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_dup_check"
                    android:scaleType="centerInside"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:text="비밀번호"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/edtPw"
                    android:layout_width="286dp"
                    android:layout_height="50dp"
                    android:background="@drawable/right_border"
                    android:gravity="center"
                    android:hint="비밀번호를 입력해주세요."
                    android:textSize="15dp"
                    android:inputType="textPassword"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="100dp">
                <EditText
                    android:id="@+id/edtPwCheck"
                    android:layout_width="286dp"
                    android:layout_height="50dp"
                    android:background="@drawable/right_border"
                    android:gravity="center"
                    android:hint="비밀번호를 한 번 더 입력해주세요."
                    android:textSize="15dp"
                    android:inputType="textPassword"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30dp"
                    android:gravity="center_vertical"
                    android:text="닉네임"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/edtNickname"
                    android:layout_width="286dp"
                    android:layout_height="50dp"
                    android:background="@drawable/right_border"
                    android:gravity="center"
                    android:hint="닉네임을 입력해주세요."
                    android:textSize="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="170dp"
                    android:gravity="center_vertical"
                    android:text="키"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30dp"
                    android:gravity="center_vertical"
                    android:text="체중"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <LinearLayout
                    android:background="@drawable/right_border"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_marginRight="40dp">
                    <EditText
                        android:id="@+id/edtHeight"
                        android:background="@android:color/transparent"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:inputType="number"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="15dp"
                        android:maxLength="3"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="cm"/>

                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/right_border"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:gravity="center">
                    <EditText
                        android:id="@+id/edtWeight"
                        android:background="@android:color/transparent"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:inputType="number"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="15dp"
                        android:maxLength="3"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kg"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="150dp"
                    android:gravity="center_vertical"
                    android:text="성별"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30dp"
                    android:gravity="center_vertical"
                    android:text="출생년도"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <RadioGroup
                    android:id="@+id/rgGender"
                    android:background="@drawable/right_border"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="90dp"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rbMale"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/radiogroup_left"
                        android:textColor="@drawable/custom_radiogroup_text"
                        android:button="@null"
                        android:text="남"
                        android:textSize="15dp"
                        android:gravity="center"
                        />
                    <RadioButton
                        android:id="@+id/rbFemale"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/radiogroup_right"
                        android:textColor="@drawable/custom_radiogroup_text"
                        android:button="@null"
                        android:text="여"
                        android:textSize="15dp"
                        android:gravity="center"
                        />
                </RadioGroup>
                <LinearLayout
                    android:background="@drawable/right_border"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:gravity="center">
                    <NumberPicker
                        android:id="@+id/year_picker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="110dp"
                    android:gravity="center_vertical"
                    android:text="활동정도"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30dp"
                    android:gravity="center_vertical"
                    android:text="다이어트 목표"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <RadioGroup
                    android:id="@+id/rgActiveLevel"
                    android:background="@drawable/right_border"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="40dp"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rbHigh"
                        android:background="@drawable/radiogroup_left"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:textColor="@drawable/custom_radiogroup_text"
                        android:button="@null"
                        android:text="상"
                        android:gravity="center"/>
                    <RadioButton
                        android:id="@+id/rbMid"
                        android:background="@drawable/radiogroup_center"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:textColor="@drawable/custom_radiogroup_text"
                        android:button="@null"
                        android:text="중"
                        android:gravity="center"/>
                    <RadioButton
                        android:id="@+id/rbLow"
                        android:background="@drawable/radiogroup_right"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:textColor="@drawable/custom_radiogroup_text"
                        android:button="@null"
                        android:text="하"
                        android:gravity="center"/>
                </RadioGroup>
                <Button
                    android:id="@+id/btnDietPlan"
                    android:background="@drawable/custom_button"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="선택"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"/>
            </LinearLayout>
            <ImageButton
                android:id="@+id/btnSignUp"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/img_signup_big"
                android:scaleType="centerInside"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="70dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이미 찍먹 회원이신가요?"/>

                <Button
                    android:id="@+id/btnGoToLogin"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="로그인"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="하러가기"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>