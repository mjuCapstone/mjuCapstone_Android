<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <ImageView
            android:id="@+id/history_menu1"
            android:layout_width="168dp"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_frame2"
            android:scaleType="centerInside"
            android:src="@drawable/img_history_menu1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/history_menuname1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="카레 돈까스"
                android:textColor="#000000"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp">

                    <TextView
                        android:layout_width="82dp"
                        android:layout_height="match_parent"
                        android:text="총 칼로리"
                        android:textSize="10dp"
                        android:textColor="#E18610"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/hiskcal"
                        android:layout_width="82dp"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:text="0 kcal"
                        android:textSize="10dp"
                        android:textColor="#E18610"
                        android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp">

                <TextView
                    android:layout_width="82dp"
                    android:layout_height="match_parent"
                    android:text="탄수화물"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/hiscarbo"
                    android:layout_width="82dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="0 kcal"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp">

                <TextView
                    android:layout_width="82dp"
                    android:layout_height="match_parent"
                    android:text="단백질"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/hisprotein"
                    android:layout_width="82dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="0 kcal"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp">

                <TextView
                    android:layout_width="82dp"
                    android:layout_height="match_parent"
                    android:text="지방"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/hisfat"
                    android:layout_width="82dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="0 kcal"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp">

                <TextView
                    android:layout_width="82dp"
                    android:layout_height="match_parent"
                    android:text="인분"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/hispeople"
                    android:layout_width="82dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="0 kcal"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
