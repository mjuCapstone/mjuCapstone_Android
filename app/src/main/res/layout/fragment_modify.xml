<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ModifyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ScrollView
            android:fillViewport="true"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:weightSum="9">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:text="회원 정보 수정"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:padding="10dp"/>
                <View
                    android:background="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_margin="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:paddingHorizontal="20dp"
                    android:weightSum="5"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="닉네임"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="17dp"/>
                    <TextView
                        android:id="@+id/tvNickName"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:text="nickname"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:background="@drawable/right_border"
                        android:layout_marginVertical="5dp"
                        android:textSize="17dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:paddingHorizontal="20dp"
                    android:weightSum="5"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="비밀번호"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="15dp"/>
                    <EditText
                        android:id="@+id/edtPassword"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="123456789"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:inputType="textPassword"
                        android:background="@drawable/right_border"
                        android:layout_marginVertical="5dp"
                        android:textSize="17dp" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingStart="10dp"
                        android:padding="5dp">
                        <Button
                            android:id="@+id/btnHidePassword"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/custom_img_btn"
                            android:text="보기"
                            android:fontFamily="@font/inter_bold"
                            android:textColor="#FFFFFF"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:paddingHorizontal="20dp"
                    android:weightSum="5"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="비밀번호\n확인"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="15dp"/>
                    <EditText
                        android:id="@+id/edtPasswordConfirm"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="123456789"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:inputType="textPassword"
                        android:background="@drawable/right_border"
                        android:layout_marginVertical="5dp"
                        android:textSize="17dp" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingStart="10dp"
                        android:padding="5dp">
                        <Button
                            android:id="@+id/btnHideConfirmPassword"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/custom_img_btn"
                            android:text="보기"
                            android:fontFamily="@font/inter_bold"
                            android:textColor="#FFFFFF"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="키 (cm)"
                        android:paddingLeft="30dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="30dp"
                        android:gravity="left"
                        android:text="체중 (kg)"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/edtHeight"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="170"
                        android:inputType="number"
                        android:maxLength="3"
                        android:layout_marginHorizontal="20dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:background="@drawable/right_border"
                        android:layout_marginVertical="5dp"
                        android:textSize="17dp" />
                    <EditText
                        android:id="@+id/edtWeight"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="20dp"
                        android:text="65"
                        android:inputType="number"
                        android:maxLength="3"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:background="@drawable/right_border"
                        android:layout_marginVertical="5dp"
                        android:textSize="17dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="성별"
                        android:paddingLeft="30dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="30dp"
                        android:gravity="left"
                        android:text="출생연도"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="2">
                    <RadioGroup
                        android:id="@+id/rgGender"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="20dp"
                        android:paddingVertical="5dp"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/rbMale"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/radiogroup_left"
                            android:textColor="@drawable/custom_radiogroup_text"
                            android:button="@null"
                            android:text="남"
                            android:textSize="15dp"
                            android:gravity="center"
                            />
                        <RadioButton
                            android:id="@+id/rbFemale"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/radiogroup_right"
                            android:textColor="@drawable/custom_radiogroup_text"
                            android:button="@null"
                            android:text="여"
                            android:textSize="15dp"
                            android:gravity="center"
                            />
                    </RadioGroup>
                    <LinearLayout
                        android:background="@drawable/right_border"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="#E18610"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="5dp"
                        android:gravity="center">
                        <NumberPicker
                            android:id="@+id/year_picker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="30dp"
                        android:gravity="left"
                        android:text="활동정도"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingLeft="30dp"
                        android:text="다이어트 목표"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:weightSum="2">
                    <RadioGroup
                        android:id="@+id/rgActiveLevel"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="5dp">
                        <RadioButton
                            android:id="@+id/rbHigh"
                            android:background="@drawable/radiogroup_left"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:button="@null"
                            android:textColor="@drawable/custom_radiogroup_text"
                            android:text="상"
                            android:gravity="center"/>
                        <RadioButton
                            android:id="@+id/rbMid"
                            android:background="@drawable/radiogroup_center"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:button="@null"
                            android:textColor="@drawable/custom_radiogroup_text"
                            android:text="중"
                            android:gravity="center"/>
                        <RadioButton
                            android:id="@+id/rbLow"
                            android:background="@drawable/radiogroup_right"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:button="@null"
                            android:textColor="@drawable/custom_radiogroup_text"
                            android:text="하"
                            android:gravity="center"/>
                    </RadioGroup>
                    <Button
                        android:id="@+id/btnDietPlan"
                        android:background="@drawable/custom_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="5dp"
                        android:text="빠른 체중 감소"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:gravity="center">
                    <Button
                        android:id="@+id/btnConfirmModify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_img_btn"
                        android:text="확인"
                        android:textStyle="bold"
                        android:scaleType="centerInside"
                        android:textColor="#FFFFFF"
                        android:layout_marginRight="10dp" />

                    <Button
                        android:id="@+id/btnCancelModify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_img_btn"
                        android:text="취소"
                        android:textStyle="bold"
                        android:scaleType="centerInside"
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                </LinearLayout>



            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>